public class assign3 {
public static void main(String[] args) {

	printPowers(2,7);
	printPowers(5,3);
	
	}

public static void printPowers(int base, int exponent) {

	System.out.println("\nYou entered " + base + " to the " + exponent + " Power.");

	System.out.print("Your result is: 1"); //anything any number to power of 0 = 1.
	int pow = 1;
	for (int i = 0; i < exponent; i++) {
		pow = pow * base;

		System.out.print(" " + pow);
	}
	System.out.print("\n");
	
	//Note: Test your method by calling it twice from the main method of your class with different arguments. For example, if you call
	//printPowersOfN(2,7);   
	//printPowersOfN(5,3);

	//The result on the console::
	//1 2 4 8 16 32 64 128 
	//1 5 25 125 

}

}
